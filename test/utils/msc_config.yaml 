# This is an example MSC configuration file for testing checkpoint logic.
profiles:
  checkpoint-test:
    storage_provider:
      type: s3
      options:
        region_name: us-east-1
        base_path: checkpoint-test-bucket
    credentials_provider:
      type: S3Credentials
      options:
        access_key: "access-key-id"
        secret_key: "secret-access-key"
cache:
  location: /tmp/.cache
  size_mb: 5000
